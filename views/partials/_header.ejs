<!-- views/partials/_header.ejs -->

<title>TinyApp</title>

<div>
  <% if (!user) { %>

    <form method="POST" action="/login">
        <input id="email" type="text" name="email" placeholder="Email" style="width: 300px">
        <input type="submit" value="Login">
    </form>

  <% } else { %>

    <form method="POST" action="/logout">
         <%=user.id%> <input type="submit" value="Logout">
    </form>

  <% } %>

</div>
